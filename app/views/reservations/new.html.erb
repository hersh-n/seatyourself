<h1>Book a new reservation</h1>

<%=form_for [@restaurant, @reservation] do |f| %>
  <div class="field">
    <%= f.label :party_size %><br />
    <%= f.number_field :party_size %>
  </div>
  <div class="field">
    <%= f.label :timeslot %><br />
    <%= f.datetime_field :timeslot %>
  </div>
  <%= f.submit %>
<% end %>